<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:indeterminate="true"
        app:spb_colors="@array/spb_colors"
        app:spb_mirror_mode="false"
        app:spb_progressiveStart_activated="true"
        app:spb_progressiveStart_speed="14"
        app:spb_progressiveStop_speed="1"
        app:spb_reversed="false"
        app:spb_sections_count="3"
        app:spb_speed="1.0"
        app:spb_stroke_separator_length="0dp"
        app:spb_stroke_width="3dp" />

    <ImageView
        android:id="@+id/splash_logo_img"
        android:layout_width="@dimen/logo_splash"
        android:layout_height="@dimen/logo_splash"
        android:layout_centerInParent="true" />

</RelativeLayout>